                     warp == 2.0.3.2,
                     wai-logger == 2.1.1,
                     fast-logger == 2.1.5,
                     yesod-core == 1.2.6.4,
                     text == 0.11.3.1,
                     lifted-base == 0.2.1.1,
                     yesod == 1.2.4,
                     yesod-static == 1.2.2.1,
                     base >= 4 && < 5,
                     foreign-store == 0.0,
                     blaze == 0.0.2,
                     css == 0.1,
                     directory == 1.1.0.2,
                     pandoc == 1.12.3.3,
                     pandoc-types == 1.12.3.2,
                     http-conduit == 2.0.0.5,
                     hscolour == 1.20.3,
                     text-icu == 0.6.3.7,
                     bytestring == 0.9.2.1
